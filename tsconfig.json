{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    "allowImportingTsExtensions":true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
    },
    "plugins": [{"name": "next"}]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
